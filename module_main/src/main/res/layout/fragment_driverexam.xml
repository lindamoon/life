<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="top.lixb.base.module_main.R" />
        <variable
            name="driverexam"
            type="top.lixb.base.module_main.viewmodel.DriverexamViewModel" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spsort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemDropDownLayout="@{R.layout.item_dropdown}"
                app:itemIds="@{driverexam.itemIds}"
                app:itemBinding="@{driverexam.singleItem}"
                app:items="@{driverexam.items_sort}"
                ></Spinner>

            <Spinner
                android:id="@+id/spsubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemDropDownLayout="@{R.layout.item_dropdown}"
                app:itemIds="@{driverexam.itemIds}"
                app:itemBinding="@{driverexam.singleItem}"
                app:items="@{driverexam.items_subject}"
                ></Spinner>

            <Spinner
                android:id="@+id/sptype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemDropDownLayout="@{R.layout.item_dropdown}"
                app:itemIds="@{driverexam.itemIds}"
                app:itemBinding="@{driverexam.singleItem}"
                app:items="@{driverexam.items_type}"
                ></Spinner>
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            binding:onloadmoreListener="@{driverexam.loadmoreListener}"
            binding:onrefreshListener="@{driverexam.refreshListener}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:adapter="@{driverexam.adapter}"
                app:itemBinding="@{driverexam.singleDriverItem}"
                app:items="@{driverexam.driveritems}"
                app:layoutManager="@{LayoutManagers.linear()}"
                app:viewHolder="@{driverexam.viewHolder}"
                >
            </android.support.v7.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout></layout>
